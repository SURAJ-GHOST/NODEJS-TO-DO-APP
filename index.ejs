<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css">
</head>
<body background="blue"><center>
    <div class="container">
        <h1 class="mt-4">To-Do List</h1>
        <form action="/add" method="POST">
            <div class="form-group">
                <input type="text" name="task" class="form-control" placeholder="Add new task" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Task</button>
        </form>

        <ul class="list-group mt-4">
            <% todos.forEach(todo => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span style="text-decoration: <%= todo.completed ? 'line-through' : 'none' %>;">
                        <%= todo.task %>
                    </span>
                    <div>
                        <form action="/update/<%= todo._id %>" method="POST" class="d-inline">
                            <input type="text" name="task" value="<%= todo.task %>" required>
                            <input type="checkbox" name="completed" <%= todo.completed ? 'checked' : '' %> > Completed
                            <button type="submit" class="btn btn-warning btn-sm">Update</button>
                        </form>
                        <form action="/delete/<%= todo._id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div></center>
</body>
</html>
